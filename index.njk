---
layout: base.njk
title: TEI Publisher Integration Test
doc: doc/documentation.xml
odd: docbook
context:
---
<pb-page api-version="1.0.0" unresolved="unresolved">
<main>
      <pb-document id="document1" path="{{doc}}" view="div" odd="{{odd}}"></pb-document>

      <ul class="nav justify-content-between">
          <li class="nav-item">
              <pb-navigation emit="transcription" keyboard="left"
                  subscribe="transcription" direction="backward" unit="page" class="btn btn-light">
                  <i class="bi bi-arrow-left"></i>
              </pb-navigation>
          </li>
          <li class="nav-item">
            <pb-view id="breadcrumbs" class="breadcrumbs" src="document1" subscribe="transcription" static="{{context}}">
              <pb-param name="mode" value="breadcrumbs"></pb-param>
            </pb-view>
          </li>
          <li class="nav-item">
              <pb-navigation emit="transcription" keyboard="right"
                  subscribe="transcription" direction="forward" unit="page" class="btn btn-light">
                  <i class="bi bi-arrow-right"></i>
              </pb-navigation>
          </li>
      </ul>
      <nav>
        {% tpfetch "api/document/" + doc | urlencode + "/contents?target=transcription&icons=false" %}
      </nav>
      <pb-view id="view1" src="document1" append-footnotes="append-footnotes" subscribe="transcription" emit="transcription" 
          static="{{context}}">
      </pb-view>
</main>
</pb-page>